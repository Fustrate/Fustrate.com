{
    "[haml]": {
        "editor.rulers": [120],
        "editor.tabSize": 2,
    },
    "[javascript]": {
        "editor.rulers": [120],
        "editor.tabSize": 2,
    },
    "[markdown]": {
        "editor.rulers": [120],
        "editor.tabSize": 2,
    },
    // I don't like the HAML extensions
    "[plaintext]": {
        "editor.rulers": [120],
        "editor.tabSize": 2,
    },
    "[postcss]": {
        "editor.autoIndent": "full",
        "editor.colorDecorators": true,
        "editor.detectIndentation": true,
        "editor.renderWhitespace": "boundary",
        "editor.rulers": [120],
        "editor.tabSize": 4,
    },
    "[ruby]": {
        "editor.rulers": [120],
        "editor.tabSize": 2,
    },
    "[typescript]": {
        "editor.rulers": [120],
        "editor.tabSize": 2,
    },
    "[yaml]": {
        "editor.rulers": [120],
        "editor.tabSize": 2,
    },
    "eslint.validate": [
        "javascript",
        "typescript",
    ],
    "files.associations": {
        "*.css": "postcss",
        "tslint.json": "jsonc",
    },
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    "javascript.preferences.quoteStyle": "single",
    "javascript.validate.enable": false,
    "search.exclude": {
        ".yarn": true,
        "app/frontend/utilities/routes.ts": true,
        "node_modules": true,
        "yarn.lock": true,
    },
    "typescript.tsdk": "node_modules/typescript/lib",
    "typescript.validate.enable": true,
}
